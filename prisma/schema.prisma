generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Categories {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  topicIds String[] @db.ObjectId
  topics  Topics[]  @relation(fields: [topicIds], references: [id])
}

model Topics {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  sources     Sources[]
  categoryIds String[]   @db.ObjectId
  categories  Categories[] @relation(fields: [categoryIds], references: [id])
}




model Sources {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  topic    Topics @relation(fields: [topicId], references: [id])
  topicId  String @db.ObjectId
  title    String
  description String?
  photos   String?
  notes    String?
  urls     String?
}


model Recently_Deleted {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  title       String

  @@map("Recently-Deleted")
}

